#!/usr/bin/env bash

# Exit if Homebrew is not installed.
[[ -z $(which brew) ]] && echo "Homebrew is needed here..." && return 1

# shellcheck disable=1090
source "$HOME/.brew.sh"

declare recipes=(
  # Install GNU core utilities (those that come with OS X are outdated)
  coreutils
  # Install some other useful utilities like `sponge`
  moreutils
  # Install GNU `find`, `locate`, `updatedb`, and `xargs`, g-prefixed
  findutils
  # Install GNU `sed`, overwriting the built-in `sed`
  gnu-sed --default-names
  gzip
  # Install Bash 4
  bash
  bash-completion

  # Install wget with IRI support
  wget --with-iri

  # Install more recent versions of some OS X tools
  vim --override-system-vi --with-lua
  homebrew/dupes/grep
  homebrew/dupes/screen
  homebrew/dupes/openssh

  # Install other useful binaries
  htop
  zsh
  # ack
  git
  # hub
  # mercurial
  imagemagick --with-webp
  pigz
  rename
  tree
  webkit2png
  zopfli
  # ngrep
  hr
  ag
  sift
  ctags
  # entr
  homebrew/binary/ngrok2
  gibo
  tmux
  # pandoc
  # pandoc-citeproc
  shellcheck
  httpie
  pgcli
  mycli
  docker
  docker-machine
  docker-compose
  dark-mode
  jq
  nmap
  watch

  # Shell completions
  vagrant-completion
  docker-completion

  # Languages
  python
  python3
  pyenv
  go
  elixir
  rust
  elm

  keybase
  awscli
)

declare applications=(
  # android-file-transfer
  # bibdesk
  # mactex
  appcleaner
  atom
  dropbox
  flux
  imageoptim
  iterm2
  java
  licecap
  monolingual
  onyx
  quicklook-csv
  quicklook-json
  slack
  spectacle
  spotify
  the-unarchiver
  transmission
  vagrant
  virtualbox
  vlc
  xquartz
)

declare fonts=(
  font-fira-code
  font-fira-mono
  font-fira-sans
  font-inconsolata
  font-input
  font-open-sans
  font-roboto
  font-source-code-pro
  font-source-sans-pro
)

brew_tap caskroom/cask
brew_tap homebrew/versions
brew_tap homebrew/completions
brew_tap homebrew/dupes
brew_tap homebrew/binary
brew_tap caskroom/versions

brew_install_or_upgrade caskroom/cask/brew-cask

brew doctor

# Make sure weâ€™re using the latest Homebrew
brew update
# Upgrade any already-installed formulae
brew upgrade --all

for recipe in "${recipes[@]}"; do
  brew_install_or_upgrade "$recipe"
done

for app in "${applications[@]}"; do
  brew cask install --appdir="/Applications" "$app"
done

for font in "${fonts[@]}"; do
  brew cask install "$font"
done

# Cleanup stage
brewroot="$(brew --config | awk '/HOMEBREW_PREFIX/ {print $2}')"/bin

# Fix htop permissions
if [[ "$(type -P "$brewroot"/htop)" ]] && [[ "$(stat -L -f "%Su:%Sg" "$brewroot/htop")" != "root:wheel" || ! "$(($(stat -L -f "%DMp" "$brewroot/htop") & 4))" ]]; then
  echo "Updating htop permissions..."
  sudo chown root:wheel "$brewroot/htop"
  sudo chmod u+s "$brewroot/htop"
fi

ln -s /usr/local/bin/gsha256sum /usr/local/bin/sha256sum

# Remove outdated versions from the cellar
brew cleanup
